<%- include("partials/header"); -%>

<div class="containers">
    <h1>HOME</h1>
    <p><%=homeStartingContent%></p>
</div>

<%  blogs.forEach(function(blog){ %>
<div class="containers">
        <h1>
            <%=blog.title%>
        </h1>
        <p>
            <% if(blog.blogContent.length>200){%>
                <%= blog.blogContent.substring(0, 200) + "....." %>
                <a href="/blogs/<%=blog.title %>">Read more</a>
            <%} else {%>
                <%= blog.blogContent %>
            <%}%>
        </p>
    </div>  
<% }) %>

<%-include("partials/footer"); -%>
